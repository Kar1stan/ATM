<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="TransactionMapper">

    <resultMap id="TransactionResult" type="com.solvd.atm.models.Transaction">
        <id property="txnId" column="txn_id"/>
        <result property="accountId" column="account_id"/>
        <result property="txnType" column="txn_type"/>
        <result property="amount" column="amount"/>
        <result property="status" column="status"/>
        <result property="timestamp" column="timestamp"/>
    </resultMap>

    <select id="getById" parameterType="int" resultMap="TransactionResult">
        SELECT * FROM Transactions WHERE txn_id = #{id}
    </select>

    <select id="findAll" resultMap="TransactionResult">
        SELECT * FROM Transactions
    </select>

    <insert id="insert" parameterType="com.solvd.atm.models.Transaction" useGeneratedKeys="true" keyProperty="txnId">
        INSERT INTO Transactions (account_id, txn_type, amount, status, timestamp)
        VALUES (#{accountId}, #{txnType}, #{amount}, #{status}, NOW())
    </insert>

    <update id="update" parameterType="com.solvd.atm.models.Transaction">
        UPDATE Transactions
        SET account_id=#{accountId}, txn_type=#{txnType}, amount=#{amount}, status=#{status}
        WHERE txn_id=#{txnId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM Transactions WHERE txn_id=#{id}
    </delete>

    <select id="findLastTransactions" parameterType="map" resultMap="TransactionResult">
        SELECT TOP ${limit} * FROM Transactions
        WHERE account_id = #{accountId}
        ORDER BY timestamp DESC
    </select>

</mapper>
