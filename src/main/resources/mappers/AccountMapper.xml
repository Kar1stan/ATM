<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="AccountMapper">

    <select id="findById" parameterType="int" resultType="Account">
        SELECT * FROM Accounts WHERE account_id = #{id}
    </select>

    <select id="findByUserId" parameterType="int" resultType="Account">
        SELECT * FROM Accounts WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="Account" useGeneratedKeys="true" keyProperty="accountId">
        INSERT INTO Accounts (user_id, balance, account_type)
        VALUES (#{userId}, #{balance}, #{accountType})
    </insert>

    <update id="updateBalance" parameterType="map">
        UPDATE Accounts
        SET balance = #{balance}
        WHERE account_id = #{accountId}
    </update>

</mapper>
